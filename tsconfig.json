{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,

    /* Bundler mode */
    "moduleResolution": "node" /* "bundler" or "node" ? */,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/main/resources/ts/*"],
      "@images/*": ["node_modules/@edifice.io/bootstrap/dist/images/*"]
    },
    "types": [
      "jquery",
      "core-js",
      "jest",
      "vite/client",
      "vitest/globals",
      "vitest/importMeta",
      "vitest"
    ]
  },
  "include": ["src"],
  "exclude": ["build", "node_modules"]
}
